datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator fakeData {
  provider = "prisma-generator-fake-data"
  // Choose your desired output path; it will be relative to `prisma` folder
  output   = "./fake-data.ts"
}

// Include all your models and enums below, same as in your main project
// Example:
model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  posts         Post[]
  profile       Profile?
}

model Post {
  id        String   @id @default(cuid())
  userId    String
  imageUrl  String
  caption   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Profile {
  id         String   @id @default(cuid())
  userId     String   @unique
  bio        String?
  avatarUrl  String?
  location   String?
  interests  String[] @default([])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}